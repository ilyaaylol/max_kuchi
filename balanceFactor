from collections import deque
import heapq
""""
Алгоритм
"""
def balanceFactor(node):
    if not node:
        return 0
    leftBalance = balanceFactor(node.left)
    rightBalance = balanceFactor(node.right)

    node.balance_factor = leftBalance - rightBalance
    return 1 + max(leftBalance, rightBalance)

def mergeKsortedArrays(sortedArrays):
    mergeArray = []
    minheap = []
    for i in range(len(sortedArrays)):
        for j in range(len(sortedArrays[i])):
            heapq.heappush(minheap, sortedArrays[i][j])
    while len(minheap) > 0:
        mergeArray.append(heapq.heappop(minheap))
    return mergeArray

def isCompleteTree(root):
    if not root:
        return True
    queue = deque([root])
    shouldBeLeaf = False
    while queue:
        node = queue.popleft()
        if not node:
            shouldBeLeaf =True
        else:
            if shouldBeLeaf:
                return False
            queue.append(node.left)
            queue.append(node.right)
    return True
class TreeNode:
    def __init__(self, val=0, left=None, right=None, balance_factor = None):
        self.data = val
        self.left = left
        self.right = right
        self.balance_factor = balance_factor

def isMaxHeap(arr):
    n = len(arr)
    for i in range((n - 2) // 2):
        left = 2 * i + 1
        right = 2 * i + 2
        if left < n and arr[i] < arr[left]:
            return False
        if left < n and arr[i] < arr[right]:
            return False
    return True
def isMaxHeap_queue(arr):
    n = len(arr)
    if n < 1:
        return True
    queue = deque([0])
    while queue:
        i = queue.popleft()
        left = 2 * i + 1
        right = 2 * i + 2
        if left < n:
            if arr[i] < arr[left]:
                return False
            queue.append(left)
        if right < n:
            if arr[i] < arr[right]:
                return False
            queue.append(right)
    return True

def buildTree(arr, i = 0):
    if i >= len(arr):
        return None
    root = TreeNode(arr[i])
    # рекурсия
    root.left = buildTree(arr, 2*i + 1)
    root.right = buildTree(arr, 2*i + 2)

    return root
def kMin(node, k):
    stack = []
    current = node
    counter = 0
    while len(stack) > 0 or current:
        while current:
            stack.append(current)
            current = current.left
        current = stack.pop()
        counter += 1
        if counter == k:
            return current.data
        current = current.right
    return None



root = buildTree([21,19, 18, 0, 12, 15, 16, 9, 8, 1])

print(balanceFactor(root))
